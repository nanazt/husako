{
  "name": "husako",
  "displayName": "husako",
  "description": "Type-safe Kubernetes resource authoring in TypeScript",
  "version": "0.1.0",
  "publisher": "nanazt",
  "repository": {
    "type": "git",
    "url": "https://github.com/nanazt/husako"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": ["Programming Languages", "Linters"],
  "activationEvents": ["onLanguage:husako"],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "husako",
        "aliases": ["husako", "Husako"],
        "extensions": [".husako"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "husako",
        "scopeName": "source.husako",
        "path": "./syntaxes/husako.tmLanguage.json",
        "embeddedLanguages": {
          "source.ts": "typescript"
        }
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}
